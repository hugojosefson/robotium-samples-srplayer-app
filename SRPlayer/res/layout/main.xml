<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="vertical"
	android:layout_gravity="right" android:background="@drawable/fullback">
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:paddingTop="30dip">

		<ImageButton android:id="@+id/BtnStartStop" android:src="@drawable/play"
			android:minHeight="46dip" android:maxHeight="46dip" android:maxWidth="46dip"
			android:minWidth="46dip" android:layout_height="wrap_content"
			android:layout_gravity="right" android:layout_width="wrap_content"
			android:background="#00000000" android:paddingRight="10dip"
			android:paddingLeft="10dip" />
		<Spinner android:id="@+id/channelSelect" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:entries="@array/channels"
			android:textColor="#FFFFFFFF" android:background="@drawable/spinner_back"
			android:drawSelectorOnTop="true" android:paddingRight="10dip"
			android:layout_marginRight="10dip" />
	</LinearLayout>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/StationName"
		 android:textColor="#FFFFFF" android:textSize="18dip"
		android:padding="10dip" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginBottom="0px"
		android:layout_marginTop="0px" android:layout_marginLeft="4dip"
		android:layout_marginRight="4dip">
		<RelativeLayout
		android:id="@+id/rel1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="horizontal">
			<TextView android:id="@+id/ProgramNamnLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Nuvarande program:" android:textColor="#FFFFFF"
				android:textSize="12dip" android:layout_below="@+id/ChannelName"
				android:layout_marginLeft="5dip" />
			<TextView android:id="@+id/ProgramNamn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="-" android:textColor="#FFFFFF" android:textSize="18dip"
				android:layout_below="@+id/ProgramNamnLabel"
				android:layout_marginLeft="5dip" />
			<TextView android:id="@+id/NextProgramNamnLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="N채sta program:" android:textColor="#FFFFFF"
				android:textSize="12dip" android:layout_below="@+id/ProgramNamn"
				android:layout_marginTop="10dip" android:layout_marginLeft="5dip" />
			<TextView android:id="@+id/NextProgramNamn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="-" android:textColor="#FFFFFF" android:textSize="18dip"
				android:layout_below="@+id/NextProgramNamnLabel"
				android:layout_marginLeft="5dip" />
			<TextView android:id="@+id/SongNamnLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Nuvarande l책t:" android:textColor="#FFFFFF"
				android:textSize="12dip" android:layout_below="@+id/NextProgramNamn"
				android:layout_marginLeft="5dip" android:layout_marginTop="10dip" />
			<TextView android:id="@+id/SongNamn" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="-"
				android:textColor="#FFFFFF" android:textSize="18dip"
				android:layout_below="@+id/SongNamnLabel"
				android:layout_marginLeft="5dip" />

			<TextView android:id="@+id/NextSongNamnLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="N채sta l책t:" android:textColor="#FFFFFF"
				android:textSize="12dip" android:layout_below="@+id/SongNamn"
				android:layout_marginTop="10dip" android:layout_marginLeft="5dip" />
			<TextView android:id="@+id/NextSongNamn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="-" android:textColor="#FFFFFF" android:textSize="18dip"
				android:layout_below="@+id/NextSongNamnLabel"
				android:layout_marginLeft="5dip" />
		</RelativeLayout>

	</ScrollView>
</LinearLayout>